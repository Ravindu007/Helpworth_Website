<%- include('./partials/header.ejs')%> 
<body>
<%- include('./partials/nav.ejs')  %> 

  <div class="container">
    <div class="row">
      <div class="col-10">
        <h2><%= project.title  %></h2>
        <p><%= project.desc  %> </p>
        <h6><%= project.budget %> </h6>
        <h6><%= project.phone  %> </h6>
      </div>
      <div class="col-2">
      <button class="btn btn-outline-danger mt-5" id="bin" data-doc="<%= project._id %> ">Delete</button>
      </div>
    </div>    
  </div>

<%- include('./partials/footer.ejs')  %> 
<!-- for delete button -->
<script>
    const bin = document.getElementById("bin");
    bin.addEventListener('click', (e)=>{
      const endpoint = `/projects/${bin.dataset.doc}`;

      fetch(endpoint,{
        method: 'DELETE'
      })
        .then((response)=>response.json())
        .then((data)=>{
          console.log('deleted');
          window.location.href = data.redirect;
        })
        .catch((err)=>{console.log(err)});
    })

</script>
</body>
</html>